		  	<tr>
		  		<td>{label mesto/}</td>
				<td>{input mesto}</td>
				<td>{label ulice/}</td>
				<td>{input ulice}</td>
		  	</tr>
		  	<tr>
		  		<td>{label cp/}</td>
				<td>{input cp}</td>
				<td>{label psc/}</td>
				<td>{input psc}</td>
			</tr>
		  	<tr>
				<td>{label ucet/}</td>
				<td>{input ucet} (číslo účtu/kód banky)</td>
		  	</tr>
		  	<tr>
		  		<td>{label kontakt/}</td>
				<td>{input kontakt}</td>
		  	</tr>
			<tr>
				<td /><td />
				<td>{label newPswd/}</td>
				<td>{input newPswd}</td>
		  	</tr>
			<tr>
				<td /><td />
				<td>{label ctrlPswd/}</td>
				<td>{input ctrlPswd}</td>
		  	</tr>
		</table>	
	{input edit class=>'button'}
	{/form}
