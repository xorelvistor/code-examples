{block title}Editace uživatele{/block}



{block content}
{form editZadForm class=> 'form'}
	<fieldset>
		<legend>Informace o zadavateli</legend>
		<table align="left" border="0"> 
			<tr>
		  		<td>{label nazev/}</td>
				<td colspan="4">{input nazev} (maximálně 80 znaků)</td>
			</tr>
			<tr>
				<td>{label zkratka/}</td>
				<td>{input zkratka} (maximálně 5 znaků)</td>
			</tr>
			<tr>
				<td>{label ic/}</td>
				<td> {input ic}</td>
				<td>{label dic/}</td>
